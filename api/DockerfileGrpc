FROM golang:1.18.3-alpine3.16 AS builder

WORKDIR /app

COPY go.mod .
COPY go.sum .

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o grpc-server ./src/grpcsvr

FROM scratch
COPY --from=builder /app/grpc-server /app/grpc-server
EXPOSE 50051
ENTRYPOINT ["/app/grpc-server"]
