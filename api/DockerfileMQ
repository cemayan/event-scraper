FROM golang:1.18.3-alpine3.16 AS builder

WORKDIR /app
COPY go.mod .
COPY go.sum .

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o mqhandler ./src/mqhandler

FROM scratch
COPY --from=builder /app/mqhandler /app/mqhandler
EXPOSE 8091
ENTRYPOINT ["/app/mqhandler"]
